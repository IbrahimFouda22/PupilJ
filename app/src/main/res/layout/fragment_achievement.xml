<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="children"
            type="com.pupilJ.domain.models.ChildrenTeacher" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardAchievement_teacher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/canary"
                android:padding="20dp">

                <ImageButton
                    android:id="@+id/btnBackAchievement_teacher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/icon_arrow_back"
                    app:layout_constraintBottom_toBottomOf="@+id/txtActivityTypeAchievement_teacher"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/txtActivityTypeAchievement_teacher" />

                <TextView
                    android:id="@+id/txtActivityTypeAchievement_teacher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/achievement"
                    android:textColor="@color/white"
                    android:textSize="@dimen/head_size"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="20dp"
            app:layout_constraintTop_toBottomOf="@+id/cardAchievement_teacher">

            <androidx.cardview.widget.CardView
                android:id="@+id/imgCircularStudentAchievement_teacher"
                android:layout_width="@dimen/imgActivitySize"
                android:layout_height="@dimen/imgActivitySize"
                app:cardCornerRadius="@dimen/imgActivitySize"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    bindImage="@{children.profilePhotoUrl}"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_item_child" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/txtNameStudentAchievement_teacher"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/black"
                android:text="@{children.name}"
                android:textSize="@dimen/head_size"
                app:layout_constraintBottom_toBottomOf="@+id/imgCircularStudentAchievement_teacher"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imgCircularStudentAchievement_teacher"
                app:layout_constraintTop_toTopOf="@+id/imgCircularStudentAchievement_teacher"
                tools:text="Yehia Ahmed" />

            <View
                android:id="@+id/lineUnderStudentPhotoAchievement_food"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_line"
                app:layout_constraintTop_toBottomOf="@id/imgCircularStudentAchievement_teacher" />

            <TextView
                android:id="@+id/txtTimeAchievement_teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/time"
                android:textColor="@color/black"
                android:textSize="@dimen/txtCardInfoDimen"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lineUnderStudentPhotoAchievement_food" />

            <TextView
                android:id="@+id/txtTimeAchievement2_teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:textColor="@color/colorBackGroundDailyText"
                android:textSize="@dimen/txtCardInfoDimen"
                app:layout_constraintStart_toEndOf="@+id/txtTimeAchievement_teacher"
                app:layout_constraintTop_toTopOf="@+id/txtTimeAchievement_teacher"
                tools:text="Today at 06:57 PM" />

            <View
                android:id="@+id/lineUnderStudentTimeAchievement_food"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_line"
                app:layout_constraintTop_toBottomOf="@id/txtTimeAchievement2_teacher" />


            <TextView
                android:id="@+id/txtAchievement_teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/notes"
                android:textColor="@color/black"
                android:textSize="@dimen/txtCardInfoDimen"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lineUnderStudentTimeAchievement_food" />

            <ImageButton
                android:id="@+id/imgBtnCamera_Achievement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="5dp"
                android:src="@drawable/icon_camera"
                app:layout_constraintBottom_toBottomOf="@+id/txtAchievement_teacher"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/txtAchievement_teacher" />

            <EditText
                android:id="@+id/txtAreaAchievement_teacher"
                android:layout_width="match_parent"
                android:layout_height="@dimen/areaHeight"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_edittext_area"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:overScrollMode="always"
                android:padding="10dp"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/areaTextSize"
                app:layout_constraintBottom_toTopOf="@+id/btnAddActivityAchievement_teacher"
                app:layout_constraintTop_toBottomOf="@+id/txtAchievement_teacher" />

            <Button
                android:id="@+id/btnAddActivityAchievement_teacher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_button"
                android:text="@string/add_activity"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtAreaAchievement_teacher" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>