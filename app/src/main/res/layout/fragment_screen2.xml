<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".onboarding.Screen2Fragment">

        <ImageView
            android:id="@+id/imgOnboard2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_onboard_screen2"/>
        <TextView
            android:id="@+id/txtHead2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/imgOnboard2"
            app:layout_constraintEnd_toEndOf="@id/imgOnboard2"
            app:layout_constraintTop_toBottomOf="@id/imgOnboard2"
            android:textSize="@dimen/head_size"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="40dp"
            android:text="@string/innovation"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/txtHead2"
            app:layout_constraintEnd_toEndOf="@id/txtHead2"
            app:layout_constraintTop_toBottomOf="@id/txtHead2"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="20dp"
            android:text="@string/underInnovation"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>